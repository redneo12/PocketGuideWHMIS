<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WHMIS.ViewModels"
             xmlns:v="clr-namespace:WHMIS.Views"
             xmlns:local="clr-namespace:WHMIS"
             x:Class="WHMIS.Views.CarouselPageView">
    <CarouselPage.ToolbarItems>
        <ToolbarItem x:Name="BtnPrevious"
                 Order="Primary"
                 Priority="0" Clicked="OnPreviousClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="&#xF04D;" FontFamily="{StaticResource IconFont}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="BtnNext"
                 Order="Primary"
                 Priority="0" Clicked="OnNextClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="&#xF054;" FontFamily="{StaticResource IconFont}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </CarouselPage.ToolbarItems>
</CarouselPage>